{{!< default}} 

<style> 
    .site-content {
        padding-top: 0;
    }
</style>

{{#post}} 
<main class="rco-container">
    <img onclick="console.log(this.classList.toggle('expand'))" class="rco-image" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m" }} 600w, {{img_url
        feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
        sizes="(min-width: 1400px) 1400px, 92vw" src="{{img_url feature_image size=" xl"}}"
        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
    <div class="rco-info-container container">
        <h1 class="rco-title">{{title}}</h1>
        <div>
            <p class="rco-author">✍️ {{authors}} <em>on</em> 📆 {{date}}</p>
            <p class="rco-date"></p>
        </div>
    </div>
</main>
{{/post}}